@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<link rel="stylesheet" href="/Resources/Widgets/Css/styles.css">
<link rel="stylesheet" href="/Resources/Vendors/ColorPicker/bootstrap-colorpicker.min.css">

<div class="widget-main">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtTitle">Title</label>
                <input id="txtTitle" type="text" class="form-control" ng-model="properties.Title.PropertyValue" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Items</label>
                <sf-list-selector sf-dynamic-items-selector
                    sf-item-type="'Telerik.Sitefinity.DynamicTypes.Model.Callouts.ProductImage'"
                    sf-master="true"
                    sf-multiselect="true"
                    sf-sortable="true"
                    sf-selected-ids="ItemsSelectedIds"
                    sf-selected-items="ItemsSelectedItems"
                />
            </div>
        </div>
    </div>

</div>

<script src="/client-components/fields/tinymce/init.js"></script>
