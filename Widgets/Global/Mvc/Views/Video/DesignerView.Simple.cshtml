@using Telerik.Sitefinity.Mvc;
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;

<link rel="stylesheet" href="/Resources/Widgets/Css/styles.css">
<link rel="stylesheet" href="/Resources/Vendors/ColorPicker/bootstrap-colorpicker.min.css">

<div class="widget-main">
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtTitle">Title</label>
                <input id="txtTitle" type="text" class="form-control" ng-model="properties.Title.PropertyValue" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtVideoID">VideoID</label>
                <input id="txtVideoID" type="text" class="form-control" ng-model="properties.VideoID.PropertyValue" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="imgVideoThumb" class="m-top-sm">Video Thumb</label>
                <sf-image-field class="sf-Media--info modal-settings modal-settings-space"
                                sf-model="properties.VideoThumb.PropertyValue"
                                sf-provider="">
                </sf-image-field>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label for="txtDescription">Description</label>
                <textarea id="txtDescription" class="dsgWYSIWYG"></textarea>
            </div>
        </div>
    </div>

</div>

<script src="/client-components/fields/tinymce/init.js"></script>
