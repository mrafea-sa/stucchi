@model dynamic

<!-- problems widget -->
<section class="problems-widget margin-bottom-2">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
                @foreach (var item in Model.ItemsSelectedItems)
                {
                    <div class="row column">
                        <div class="col-xs-12 col-sm-6 col-sm-push-6 image-box">
                            @if (item.ImageMediaAssets.Count > 0)
                            {
                            <img src="@item.ImageMediaAssets[0].Src" alt="@item.ImageMediaAssets[0].Alt" class="round-image img-responsive">
                            }
                        </div>
                        <div class="col-xs-12  col-sm-6 col-sm-pull-6 text-box">
                            <h4 class="text-left font-20 text-uppercase">PROBLEM: </h4>
                            <h3 class="text-left font-26">@Html.Raw(@item.DisplayTitle)</h3>
                            @Html.Raw(@item.IntroCopy)
                            @if (!string.IsNullOrEmpty(item.ChallengeCopy))
                            {
                                <h5 class="text-left font-18 text-uppercase">CHALLENGE</h5>
                                @Html.Raw(@item.ChallengeCopy)
                            }
                            @if (!string.IsNullOrEmpty(item.SolutionCopy))
                            {
                                <h5 class="text-left font-18 text-uppercase">SOLUTION</h5>
                                @Html.Raw(@item.SolutionCopy)
                            }
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</section>
<!-- end problems widget -->